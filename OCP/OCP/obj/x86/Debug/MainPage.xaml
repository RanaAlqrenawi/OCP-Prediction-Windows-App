                    <Button x:ConnectionId='12' x:Name="Send" Content="Button" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="60" RenderTransformOrigin="0.5,0.5" Width="200" Margin="30,30,30,50"                   >
                      

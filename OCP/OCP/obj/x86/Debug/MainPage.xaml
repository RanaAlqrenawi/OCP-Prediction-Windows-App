                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='10' x:Name="subB11" FontFamily="Segoe MDL2 Assets" Content="&#xE004;"
                    Width="50" Height="50" Background="Transparent"/>
                    <TextBlock Text="Predicted Failure" FontSize="16" VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
